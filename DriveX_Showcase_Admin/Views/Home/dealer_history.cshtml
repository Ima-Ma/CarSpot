@Html.Partial("Header")
@model IEnumerable<DriveX_Showcase_Admin.Models.Dealer_Account>
<div class="main-panel">

    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Dealer Record</h4>
                    <p class="card-description">
                        Subscription Details <code></code>
                    </p>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        # DealerId Code
                                    </th>
                                    <th>
                                        Dealer Name
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        Selected Brand 
                                    </th>
                                    <th>
                                        Activate Account
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.dealer_IdCode
                                        </td>
                                        <td>
                                            @item.dealers
                                        </td>
                                        <td>
                                            @item.status
                                        </td>

                                        @if (@item.selected_brand == 1)
                                        {
                                            <td>Honda</td>
                                        }
                                        else if (@item.selected_brand == 3)
                                        {
                                            <td>BMW</td>
                                        }
                                        else if (@item.selected_brand == 4)
                                        {
                                            <td>Toyota</td>
                                        }
                                        else if (@item.selected_brand == 5)
                                        {
                                            <td>Suzuki</td>
                                        }
                                        <td>
                                           <a class="btn btn-primary" asp-controller="Home" asp-action="active_account" asp-route-id="@item.id">Activate Account</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                title: 'Success!',
                text: '@TempData["SuccessMessage"]',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        </script>
    }
    @Html.Partial("Footer")
