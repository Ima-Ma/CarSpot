@Html.Partial("Layout")
@Html.Partial("_Header")
@{
    Layout = null;
}
<main class="main min-vh-100" id="top">
    <section class="py-0" id="page-contact">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 bg-body pb-4">
                    <div class="row h-100 flex-center">
                        <div class="col-lg-8" data-zanim-lg='{"animation":"slide-left","delay":0.6}' data-zanim-trigger="scroll">
                            <h1 class="text-uppercase fw-light d-inline-block">Contact</h1>
                            <form class="mt-1" method="POST">
                                <input class="form-control" type="text" name="Name" required placeholder="Enter Your Name!" />
                                <input class="form-control mt-3" type="text" name="Email" required placeholder="Your Email" />
                                <textarea class="form-control mt-3" rows="11" name="Message" required placeholder="Your Message" required="required"></textarea>
                                <div class="d-grid"><button class="btn btn-block btn-dark mt-4" type="submit">Send<span class="fa fa-paper-plane ms-1"></span></button></div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 px-0">
                    <div class="sticky-top overflow-hidden-y">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.8354345093797!2d-122.42163938468175!3d37.77492967975986!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085818d4e1b1a93%3A0xf9c3f1a357db31e2!2sSan%20Francisco%2C%20CA%2C%20USA!5e0!3m2!1sen!2s!4v1672538415392!5m2!1sen!2s"
                                width="100%"
                                height="600"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>

@Html.Partial("_Footer")
@Html.Partial("Layoutscript")