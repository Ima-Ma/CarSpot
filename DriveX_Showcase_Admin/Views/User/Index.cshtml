<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Subscription</h5>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="User" asp-action="Subscribers">
                    <p>Subscribe to our newsletter to receive the latest news and offers!</p>
                    <input type="email" name="email" placeholder="Enter your email" class="email-input" required />
                    <button class="subscribe-btn" type="submit">Subscribe</button>
                </form>
            </div>
          
        </div>
    </div>
</div>
<div id="newsletterPopup" class="popup-container" style="display: none;">
    <div class="popup-content">
        <div class="popup-header">
            <h2>Stay Updated!</h2>
            <button class="close-popup" onclick="closePopup()">X</button>
        </div>
        <form method="post" asp-controller="User" asp-action="Subscribers">
            <p>Subscribe to our newsletter to receive the latest news and offers!</p>
            <input type="email" name="email" placeholder="Enter your email" class="email-input" required />
            <button class="subscribe-btn" type="submit">Subscribe</button>
        </form>
    </div>
</div>

<script>
    function showPopup() {
        // Show the popup after 10 seconds
        setTimeout(function () {
            document.getElementById('newsletterPopup').style.display = 'flex'; // Show the popup
        }, 20000); // Delay for 10 seconds (10000 ms)
    }

    function closePopup() {
        document.getElementById('newsletterPopup').style.display = 'none'; // Hide the popup
    }

    window.onload = function () {
        // Check if the popup has been shown in the current session
        if (!sessionStorage.getItem('isPopupShown')) {
            showPopup(); // Call the function to display the popup after 10 seconds
            sessionStorage.setItem('isPopupShown', 'true'); // Mark as shown in the session
        }
    };
</script>


